<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> @ViewData["Title"] Form</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="~/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <section class="background vh-100">
        <div class="container py-5 ">
            <div class="row d-flex justify-content-center align-items-center   ">
                <div class="col col-xl-10 ">

                    <div class="row g-0 align-items-center secBackground mt-5"
                         style="border-radius: 1rem; overflow: hidden;  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);">

                        <!-- Left image section -->
                        <div class="col-md-6 col-lg-5 d-none d-md-block ">
                            <div class="d-flex align-items-center justify-content-center ">
                                <img src="~/images/Profile.png" width="360" height="490" alt="login Photo">
                            </div>
                        </div>
                        <!-- Right form section -->
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">

                            <div class="p-4 p-lg-5 text-black w-100">

                               @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @await RenderSectionAsync("ValidationOnCreateEdit", required: false)
</body>
</html>
