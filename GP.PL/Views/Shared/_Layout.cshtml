@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GP.PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="~/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-body-secondary  fixed-top border-bottom-0   navbar-expand-lg">
            <a class="navbar-brand mx-2" href="#">
                <img src="~/images/profile2.png" width="30" height="30" class="d-inline-block align-top" alt="">
                RFST
            </a>

            <!-- Toggle button for smaller screens -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar content -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Patient" asp-action="Index">
                            Patients <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto me-2">
                    @if (signInManager.IsSignedIn(User))
                    {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Profile" >Profile</a>
                    </li>
                    
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="SignOut">SignOut</a>
                        </li>
                    }
                </ul>

            </div>
        </nav>
    </header>

    
            @RenderBody()
      
      

    <footer class="text-center text-lg-start bg-body-tertiary text-muted">


        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="pt-2">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Redation-Free Scoliosis Tracking
                        </h6>
                        <p>
                            The Radiation-Free Scoliosis Tracking app helps doctors monitor scoliosis progression by creating a 3D spine model from a 2D photo, reducing the need for X-rays and minimizing radiation exposure.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                        <p><i class="fas fa-home me-3"></i> Egypt </p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            example@example.com
                        </p>
                        <p><i class="fas fa-phone me-3"></i> +20 1234567890</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4 background">
            © 2024 Radiation-Free Scoliosis Tracking. All rights reserved.
        </div>
        <!-- Copyright -->
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.min.js"></script>
@*      <script src="js/main.js"></script> 
 *@    @await RenderSectionAsync("ValidationOnCreateEdit", required: false)
    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
