@{
    ViewData["Title"] = "About Us";
}


<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="row align-items-center shadow p-4 bg-white rounded w-100" style="max-width: 1000px;">
        <div class="col-md-5 text-center mb-3 mb-md-0">
            <img src="~/images/Profile.png" class="img-fluid rounded" alt="About Us">
        </div>
        <div class="col-md-7">
            <h2 class="text-primary fw-bold">Why Choose Us?</h2>
            <p class="fs-5 text-muted">
                At [RFST], we provide safe and effective care for scoliosis patients by taking back photos and carefully
                analyzing each patient's unique condition as our approach focuses on advanced imaging technology that reduces
                exposure to harmful X-ray radiation while offering accurate diagnoses and customized treatment plans.
            </p>
            <ul class="list-unstyled">
                <li class="d-flex align-items-center mb-2">
                    <i class="fa fa-check text-primary me-2"></i>
                    <span>We aim to improve the quality of life for patients with scoliosis.</span>
                </li>
                <li class="d-flex align-items-center mb-2">
                    <i class="fa fa-check text-primary me-2"></i>
                    <span>Our commitment is to provide compassionate care with modern technologies.</span>
                </li>
                <li class="d-flex align-items-center mb-2">
                    <i class="fa fa-check text-primary me-2"></i>
                    <span>We strive to ensure that our patients receive accurate diagnoses and treatments in a safe and comfortable environment.</span>
                </li>
            </ul>
            
        </div>
    </div>
</div>