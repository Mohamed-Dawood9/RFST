@model GP.PL.VIewModel.AnalysisViewModel

<div class="vh-50 d-flex justify-content-center align-items-center">
    <div class="upload w-50">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="col-form-label" asp-for="Image">Upload Back Image</label>
                <input class="form-control" asp-for="Image" type="file" accept="image/jpeg" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PatientId" />
            <div class="py-2"></div>
            <input type="submit" value="Create" class="btn btn-info" />
            ||
            <a class="btn btn-danger" asp-action="Index" asp-route-patientId="@Model.PatientId">Back to Analyses</a>
        </form>
    </div>
</div>